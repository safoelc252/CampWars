<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:id="@+id/mainmenu_layout"
    android:keepScreenOn="true"
    android:background="#000000"
    >

    <ImageView
        android:id="@+id/mainmenu_background"
        android:layout_width = "match_parent"
        android:layout_height ="match_parent"
        android:background="#FFFFFF"
        />
    
    <ImageView
        android:id="@+id/mainmenu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop = "true"
        android:layout_marginTop = "50dp"
        android:src="@drawable/campwars_title"
        />

    <Button
        android:id = "@+id/mainmenu_mode1"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mainmenu_title"
        android:layout_marginTop ="100dp"
        android:background="@drawable/button_selector"
        android:paddingRight = "@dimen/button_verticalpad"
        android:paddingLeft = "@dimen/button_verticalpad"
        android:paddingTop = "@dimen/button_horizontalpad"
        android:paddingBottom = "@dimen/button_horizontalpad"
        android:text="MODE 1"
        android:textSize="@dimen/button_fontsize"
        />

    <Button
        android:id = "@+id/mainmenu_mode2"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mainmenu_mode1"
        android:layout_marginTop ="15dp"
        android:background="@drawable/button_selector"
        android:paddingRight = "@dimen/button_verticalpad"
        android:paddingLeft = "@dimen/button_verticalpad"
        android:paddingTop = "@dimen/button_horizontalpad"
        android:paddingBottom = "@dimen/button_horizontalpad"
        android:text="MODE 2"
        android:textSize="@dimen/button_fontsize"
        />

</RelativeLayout>